<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F1F1F" />
            <corners android:radius="12dp" />
            <size android:width="180dp" android:height="110dp" />
        </shape>
    </item>
    
    <!-- GitHub 로고 (상단 왼쪽) -->
    <item android:gravity="top|left" android:left="12dp" android:top="12dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
    
    <!-- 텍스트 라인 1 (타이틀) -->
    <item android:gravity="top" android:top="12dp" android:left="48dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="16dp" />
        </shape>
    </item>
    
    <!-- 텍스트 라인 2 (알림 텍스트) -->
    <item android:gravity="top" android:top="40dp" android:left="12dp" android:right="72dp">
        <shape android:shape="rectangle">
            <solid android:color="#BBBBBB" />
            <size android:height="12dp" />
        </shape>
    </item>
</layer-list> 